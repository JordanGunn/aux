{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "diff_discovery_plan_v1.schema.json",
  "title": "Diff Discovery Plan",
  "description": "Discovery-only plan: explicit surface/root/scope/bounds used to enumerate change candidates",
  "type": "object",
  "required": ["surface", "root", "scope"],
  "additionalProperties": false,
  "properties": {
    "surface": {
      "type": "string",
      "enum": ["git"],
      "description": "Diff surface (v1: git only)"
    },
    "root": {
      "type": "string",
      "minLength": 1,
      "description": "Repository root or working directory path"
    },
    "scope": {
      "type": "object",
      "required": ["mode"],
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["working_tree", "staged", "commit_range"],
          "description": "What to compare"
        },
        "base_ref": {
          "type": "string",
          "description": "Base reference for commit_range mode"
        },
        "head_ref": {
          "type": "string",
          "description": "Head reference for commit_range mode"
        },
        "paths": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Optional path filters"
        }
      }
    },
    "bounds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_files": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of files to enumerate"
        }
      }
    },
    "intent_ref": {
      "type": "string",
      "description": "Reference to the original intent"
    }
  }
}
