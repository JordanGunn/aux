{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "diff_summary_v1.schema.json",
  "title": "Diff Summary",
  "description": "Machine-readable change summary; primary reasoning surface",
  "type": "object",
  "required": ["files_changed", "insertions", "deletions"],
  "additionalProperties": false,
  "properties": {
    "files_changed": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of files with changes"
    },
    "insertions": {
      "type": "integer",
      "minimum": 0,
      "description": "Total lines added"
    },
    "deletions": {
      "type": "integer",
      "minimum": 0,
      "description": "Total lines removed"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "status"],
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["added", "modified", "deleted", "renamed", "copied", "binary"]
          },
          "insertions": { "type": "integer", "minimum": 0 },
          "deletions": { "type": "integer", "minimum": 0 },
          "old_path": {
            "type": "string",
            "description": "Original path for renamed/copied files"
          },
          "binary": {
            "type": "boolean",
            "description": "True if file is binary"
          }
        }
      },
      "description": "Per-file change details"
    },
    "renames": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "detected": { "type": "boolean" },
        "count": { "type": "integer", "minimum": 0 },
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" }
            }
          }
        },
        "detection_mode": { "type": "string" }
      },
      "description": "Rename detection results"
    },
    "truncated": {
      "type": "boolean",
      "default": false,
      "description": "True if output was truncated due to bounds"
    },
    "truncation_reason": {
      "type": "string",
      "description": "Reason for truncation if truncated"
    },
    "scope": {
      "type": "object",
      "description": "Copy of the scope from the plan for reproducibility"
    }
  }
}
