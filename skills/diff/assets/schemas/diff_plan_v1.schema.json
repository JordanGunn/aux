{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "diff_plan_v1.schema.json",
  "title": "Diff Execution Plan",
  "description": "Execution plan: explicit surface/root/scope/mode/bounds/normalization + recorded discovery context",
  "type": "object",
  "required": ["surface", "root", "scope", "mode", "bounds"],
  "additionalProperties": false,
  "properties": {
    "surface": {
      "type": "string",
      "enum": ["git"],
      "description": "Diff surface (v1: git only)"
    },
    "root": {
      "type": "string",
      "minLength": 1,
      "description": "Repository root or working directory path"
    },
    "scope": {
      "type": "object",
      "required": ["comparison"],
      "additionalProperties": false,
      "properties": {
        "comparison": {
          "type": "string",
          "enum": ["working_tree_vs_index", "index_vs_head", "commit_range"],
          "description": "What endpoints to compare"
        },
        "base_ref": {
          "type": "string",
          "description": "Base reference for commit_range"
        },
        "head_ref": {
          "type": "string",
          "description": "Head reference for commit_range"
        },
        "paths": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Optional path filters"
        }
      }
    },
    "mode": {
      "type": "string",
      "enum": ["summary_only", "unified_diff"],
      "description": "Output mode: summary only or include unified diff patch"
    },
    "bounds": {
      "type": "object",
      "required": ["max_files"],
      "additionalProperties": false,
      "properties": {
        "max_files": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of files to diff"
        },
        "max_lines": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum lines in patch output"
        },
        "max_bytes": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum bytes in patch output"
        }
      }
    },
    "normalization": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "line_ending": {
          "type": "boolean",
          "default": false,
          "description": "Treat CRLF and LF as equivalent (git diff --ignore-cr-at-eol)"
        },
        "whitespace": {
          "type": "string",
          "enum": ["none", "ignore_space_change", "ignore_all_space"],
          "default": "none",
          "description": "Whitespace handling mode"
        }
      }
    },
    "rename_detection": {
      "type": "boolean",
      "default": false,
      "description": "Enable rename detection (git diff -M)"
    },
    "discovery_ref": {
      "type": "string",
      "description": "Reference to the discovery output that informed this plan"
    },
    "intent_ref": {
      "type": "string",
      "description": "Reference to the original intent"
    }
  }
}
