{
  "description": "Plan schema for diff command.",
  "properties": {
    "path_a": {
      "description": "First path (file or directory)",
      "title": "Path A",
      "type": "string"
    },
    "path_b": {
      "description": "Second path (file or directory)",
      "title": "Path B",
      "type": "string"
    },
    "context_lines": {
      "default": 3,
      "description": "Context lines",
      "minimum": 0,
      "title": "Context Lines",
      "type": "integer"
    },
    "ignore_whitespace": {
      "default": false,
      "description": "Ignore whitespace changes",
      "title": "Ignore Whitespace",
      "type": "boolean"
    },
    "ignore_case": {
      "default": false,
      "description": "Ignore case differences",
      "title": "Ignore Case",
      "type": "boolean"
    },
    "unified": {
      "default": true,
      "description": "Unified diff format",
      "title": "Unified",
      "type": "boolean"
    }
  },
  "required": [
    "path_a",
    "path_b"
  ],
  "title": "DiffPlan",
  "type": "object"
}
