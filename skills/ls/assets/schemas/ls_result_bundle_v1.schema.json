{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ls_result_bundle_v1.schema.json",
  "title": "ls_result_bundle_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "inventory", "receipt"],
  "properties": {
    "schema": { "type": "string", "const": "ls_result_bundle_v1" },
    "inventory": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "plan", "summary", "entries"],
      "properties": {
        "schema": { "type": "string", "const": "ls_inventory_v1" },
        "plan": { "type": "object" },
        "summary": {
          "type": "object",
          "additionalProperties": false,
          "required": ["root", "scanned", "returned", "counts_by_type", "bytes_total"],
          "properties": {
            "root": { "type": "string", "minLength": 1 },
            "scanned": { "type": "integer", "minimum": 0 },
            "returned": { "type": "integer", "minimum": 0 },
            "counts_by_type": {
              "type": "object",
              "additionalProperties": false,
              "required": ["file", "dir", "symlink", "other"],
              "properties": {
                "file": { "type": "integer", "minimum": 0 },
                "dir": { "type": "integer", "minimum": 0 },
                "symlink": { "type": "integer", "minimum": 0 },
                "other": { "type": "integer", "minimum": 0 }
              }
            },
            "bytes_total": { "type": "integer", "minimum": 0 }
          }
        },
        "entries": {
          "type": "array",
          "maxItems": 10000,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "type", "size_bytes", "mtime_epoch_ms"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "type": { "type": "string", "enum": ["file", "dir", "symlink", "other"] },
              "size_bytes": { "type": "integer", "minimum": 0 },
              "mtime_epoch_ms": { "type": "integer", "minimum": 0 },
              "extension": { "type": ["string", "null"] },
              "coarse_type": {
                "type": ["string", "null"],
                "enum": ["code", "doc", "config", "binary", "other", null]
              },
              "git_xy": {
                "type": ["string", "null"],
                "pattern": "^[ MADRCU?!]{2}$",
                "description": "Two-character XY status from `git status --porcelain=v1` (or null if git unavailable/disabled)."
              },
              "git_rename_from": { "type": ["string", "null"] }
            }
          }
        }
      }
    },
    "receipt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "plan", "scan", "ranking", "git", "ignores", "artifacts", "truncation"],
      "properties": {
        "schema": { "type": "string", "const": "ls_receipt_v1" },
        "plan": { "type": "object" },
        "scan": {
          "type": "object",
          "additionalProperties": false,
          "required": ["root", "depth", "entries_scanned", "errors"],
          "properties": {
            "root": { "type": "string", "minLength": 1 },
            "depth": { "type": "integer", "minimum": 0 },
            "entries_scanned": { "type": "integer", "minimum": 0 },
            "errors": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["path", "kind", "message"],
                "properties": {
                  "path": { "type": "string" },
                  "kind": { "type": "string", "enum": ["permission_denied", "stat_failed", "io", "other"] },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "ranking": {
          "type": "object",
          "additionalProperties": false,
          "required": ["sort", "order", "top_n", "entries_returned"],
          "properties": {
            "sort": { "type": "string", "enum": ["mtime", "size", "name"] },
            "order": { "type": "string", "enum": ["asc", "desc"] },
            "top_n": { "type": "integer", "minimum": 1 },
            "entries_returned": { "type": "integer", "minimum": 0 }
          }
        },
        "git": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "detected", "status"],
          "properties": {
            "mode": { "type": "string", "enum": ["auto", "on", "off"] },
            "detected": { "type": "boolean" },
            "status": { "type": "string", "enum": ["enabled", "disabled", "not_a_repo", "git_not_found", "error"] },
            "message": { "type": ["string", "null"] }
          }
        },
        "ignores": {
          "type": "object",
          "additionalProperties": false,
          "required": ["include_hidden", "sources"],
          "properties": {
            "include_hidden": { "type": "boolean" },
            "sources": { "type": "array", "items": { "type": "string", "enum": ["git", "none"] } }
          }
        },
        "artifacts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["inventory_json", "view_txt"],
          "properties": {
            "inventory_json": { "type": "string" },
            "view_txt": { "type": "string" }
          }
        },
        "truncation": {
          "type": "object",
          "additionalProperties": false,
          "required": ["scan_truncated", "rank_truncated", "view_truncated"],
          "properties": {
            "scan_truncated": { "type": "boolean" },
            "rank_truncated": { "type": "boolean" },
            "view_truncated": { "type": "boolean" },
            "reason": { "type": ["string", "null"] }
          }
        }
      }
    }
  }
}
