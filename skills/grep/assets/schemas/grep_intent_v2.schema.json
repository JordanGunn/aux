{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "grep_intent_v2.schema.json",
  "title": "grep_intent_v2",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "prompt"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "grep_intent_v2",
      "description": "Document discriminator for grep intent."
    },
    "prompt": {
      "type": "string",
      "minLength": 1,
      "description": "The user-provided intent from `/grep <prompt>` invocation."
    },
    "assumptions": {
      "type": "array",
      "description": "Agent assumptions that influenced parameter selection.",
      "items": { "type": "string", "minLength": 1 },
      "maxItems": 8
    },
    "hints": {
      "type": "object",
      "description": "User-supplied or agent-chosen hints to constrain scope.",
      "additionalProperties": false,
      "properties": {
        "roots": {
          "type": "array",
          "description": "Candidate root directories.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 8
        },
        "include_globs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 32
        },
        "exclude_globs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 64
        }
      }
    }
  }
}

