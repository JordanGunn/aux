{
  "$defs": {
    "Pattern": {
      "description": "A search pattern with kind indicator.",
      "properties": {
        "kind": {
          "default": "regex",
          "enum": [
            "regex",
            "fixed"
          ],
          "title": "Kind",
          "type": "string"
        },
        "value": {
          "title": "Value",
          "type": "string"
        }
      },
      "required": [
        "value"
      ],
      "title": "Pattern",
      "type": "object"
    }
  },
  "description": "Plan schema for grep command.",
  "properties": {
    "root": {
      "description": "Search root directory",
      "title": "Root",
      "type": "string"
    },
    "patterns": {
      "description": "Patterns to search for",
      "items": {
        "$ref": "#/$defs/Pattern"
      },
      "title": "Patterns",
      "type": "array"
    },
    "globs": {
      "description": "Include globs",
      "items": {
        "type": "string"
      },
      "title": "Globs",
      "type": "array"
    },
    "excludes": {
      "description": "Exclude globs",
      "items": {
        "type": "string"
      },
      "title": "Excludes",
      "type": "array"
    },
    "mode": {
      "default": "regex",
      "description": "Default pattern mode",
      "enum": [
        "regex",
        "fixed"
      ],
      "title": "Mode",
      "type": "string"
    },
    "case": {
      "default": "smart",
      "description": "Case sensitivity",
      "enum": [
        "smart",
        "sensitive",
        "insensitive"
      ],
      "title": "Case",
      "type": "string"
    },
    "context_lines": {
      "default": 0,
      "description": "Context lines around matches",
      "minimum": 0,
      "title": "Context Lines",
      "type": "integer"
    },
    "hidden": {
      "default": false,
      "description": "Search hidden files",
      "title": "Hidden",
      "type": "boolean"
    },
    "no_ignore": {
      "default": false,
      "description": "Don't respect gitignore",
      "title": "No Ignore",
      "type": "boolean"
    },
    "max_matches": {
      "anyOf": [
        {
          "minimum": 1,
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Maximum matches to return",
      "title": "Max Matches"
    }
  },
  "required": [
    "root",
    "patterns"
  ],
  "title": "GrepPlan",
  "type": "object"
}
