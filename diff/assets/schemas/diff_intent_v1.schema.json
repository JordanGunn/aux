{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "diff_intent_v1.schema.json",
  "title": "Diff Intent",
  "description": "Captures user intent text for /diff without implicit defaults",
  "type": "object",
  "required": ["intent"],
  "additionalProperties": false,
  "properties": {
    "intent": {
      "type": "string",
      "minLength": 1,
      "description": "Natural language description of what the user wants to diff"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the intent was captured"
    }
  }
}
