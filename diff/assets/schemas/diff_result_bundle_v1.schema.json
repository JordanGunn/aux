{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "diff_result_bundle_v1.schema.json",
  "title": "Diff Result Bundle",
  "description": "Convenience bundle schema tying summary + receipt (and optional patch metadata)",
  "type": "object",
  "required": ["summary", "receipt"],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "$ref": "diff_summary_v1.schema.json",
      "description": "The diff summary"
    },
    "receipt": {
      "$ref": "diff_receipt_v1.schema.json",
      "description": "The execution receipt"
    },
    "patch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "emitted": {
          "type": "boolean",
          "description": "Whether a patch file was emitted"
        },
        "path": {
          "type": "string",
          "description": "Path to the patch file if emitted"
        },
        "bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Size of the patch file in bytes"
        },
        "truncated": {
          "type": "boolean",
          "description": "Whether the patch was truncated"
        }
      },
      "description": "Patch file metadata if patch was requested"
    }
  }
}
