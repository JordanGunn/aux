{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "regex_intent_v1.schema.json",
  "title": "regex_intent_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "prompt"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "regex_intent_v1",
      "description": "Document discriminator for regex intent."
    },
    "prompt": {
      "type": "string",
      "minLength": 1,
      "description": "The user-provided intent from `/regex <prompt>` invocation."
    },
    "assumptions": {
      "type": "array",
      "description": "Agent assumptions that influenced pattern selection.",
      "items": { "type": "string", "minLength": 1 },
      "maxItems": 8
    },
    "hints": {
      "type": "object",
      "description": "User-supplied or agent-chosen hints to constrain matching.",
      "additionalProperties": false,
      "properties": {
        "examples": {
          "type": "array",
          "description": "Example strings that should match.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 16
        },
        "non_examples": {
          "type": "array",
          "description": "Example strings that should NOT match.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 16
        },
        "capture_names": {
          "type": "array",
          "description": "Named capture groups to extract.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 16
        }
      }
    }
  }
}
