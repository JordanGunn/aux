{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "regex_plan_v1.schema.json",
  "title": "regex_plan_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "intent", "intent_hash", "match"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "regex_plan_v1",
      "description": "Document discriminator for a compiled regex plan."
    },
    "intent": {
      "description": "The original intent document.",
      "$ref": "regex_intent_v1.schema.json"
    },
    "intent_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$",
      "description": "SHA256 hash of normalized intent JSON."
    },
    "match": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pattern", "flags", "max_matches", "timeout", "format"],
      "properties": {
        "pattern": {
          "type": "string",
          "minLength": 1,
          "description": "The regex pattern to match."
        },
        "flags": {
          "type": "object",
          "additionalProperties": false,
          "required": ["ignore_case", "multiline", "dotall"],
          "properties": {
            "ignore_case": {
              "type": "boolean",
              "default": false,
              "description": "Case insensitive matching."
            },
            "multiline": {
              "type": "boolean",
              "default": false,
              "description": "^ and $ match line boundaries."
            },
            "dotall": {
              "type": "boolean",
              "default": false,
              "description": ". matches newlines."
            }
          }
        },
        "max_matches": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000,
          "default": 1000,
          "description": "Maximum matches to return."
        },
        "timeout": {
          "type": "integer",
          "minimum": 1,
          "maximum": 300,
          "default": 30,
          "description": "Timeout in seconds."
        },
        "format": {
          "type": "string",
          "enum": ["auto", "human", "jsonl"],
          "default": "auto"
        }
      }
    },
    "notes": {
      "type": "object",
      "additionalProperties": false,
      "description": "Rationale for pattern choices.",
      "properties": {
        "pattern_explanation": { "type": "string", "minLength": 1 },
        "edge_cases": { "type": "string", "minLength": 1 }
      }
    }
  }
}
