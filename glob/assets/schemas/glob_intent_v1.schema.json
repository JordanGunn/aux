{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "glob_intent_v1.schema.json",
  "title": "glob_intent_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "prompt"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "glob_intent_v1",
      "description": "Document discriminator for glob intent."
    },
    "prompt": {
      "type": "string",
      "minLength": 1,
      "description": "The user-provided intent from `/glob <prompt>` invocation."
    },
    "assumptions": {
      "type": "array",
      "description": "Agent assumptions that influenced parameter selection.",
      "items": { "type": "string", "minLength": 1 },
      "maxItems": 8
    },
    "hints": {
      "type": "object",
      "description": "User-supplied or agent-chosen hints to constrain scope.",
      "additionalProperties": false,
      "properties": {
        "roots": {
          "type": "array",
          "description": "Candidate root directories.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 8
        },
        "extensions": {
          "type": "array",
          "description": "File extensions to include.",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 32
        },
        "exclude_patterns": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 64
        }
      }
    }
  }
}
